@model EcoConnect_Hanoi.Models.RecyclingCategory

@{
    ViewData["Title"] = @Model.Name + " - Chi tiết phân loại";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Name" style="height: 300px; object-fit: cover;">
                }
                else
                {
                    <img src="https://via.placeholder.com/300?text=No+Image" class="card-img-top" alt="No Image" style="height: 300px; object-fit: cover;">
                }
                <div class="card-body">
                    <h1 class="card-title text-success mb-3">@Model.Name</h1>
                    <p class="card-text"><strong>Mô tả:</strong> @Model.Description</p>
                    <hr />
                    <h5>Hướng dẫn tái chế chi tiết:</h5>
                    <p class="card-text">@Html.Raw(Model.RecyclingGuide?.Replace("\n", "<br/>"))</p>
                    
                    <div class="mt-4">
                        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>