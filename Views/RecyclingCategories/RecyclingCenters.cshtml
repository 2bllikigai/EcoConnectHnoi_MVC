@model IEnumerable<EcoConnect_Hanoi.Models.RecyclingCenter>

@{
    ViewData["Title"] = "Trung tâm Tái chế";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h1 class="mb-4">Các Trung tâm Tái chế</h1>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info" role="alert">
            Chưa có thông tin về các trung tâm tái chế.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var center in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@center.Name</h5>
                            <p class="card-text"><i class="bi bi-geo-alt-fill"></i> Địa chỉ: @center.Address</p>
                            <p class="card-text"><i class="bi bi-clock-fill"></i> Giờ mở cửa: @center.OpeningHours</p>
                            <p class="card-text"><i class="bi bi-box-fill"></i> Chấp nhận: @center.AcceptedMaterials</p>
                            @if (!string.IsNullOrEmpty(center.Notes))
                            {
                                <p class="card-text text-muted"><small>Ghi chú: @center.Notes</small></p>
                            }
                            <a href="https://www.google.com/maps/search/?api=1&query=@center.Latitude,@center.Longitude" target="_blank" class="btn btn-outline-info btn-sm mt-2">Xem trên Bản đồ</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>