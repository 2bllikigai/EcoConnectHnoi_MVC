@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EcoConnect Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            display: flex;
            min-height: 100vh;
            flex-direction: column;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f0f2f5;
        }
        .admin-header {
            background-color: #ffffff;
            padding: 1rem 1.5rem;
            box-shadow: 0 2px 4px rgba(0,0,0,.05);
            display: flex;
            justify-content: space-between;
            align-items: center;
            z-index: 1000; /* Đảm bảo header nằm trên cùng */
        }
        .admin-main-wrapper {
            display: flex;
            flex-grow: 1; /* Cho phép wrapper chiếm hết không gian còn lại */
        }
        .admin-sidebar {
            width: 250px;
            background-color: #198754; /* Màu xanh lá đậm như ảnh */
            color: #ffffff;
            padding-top: 20px;
            min-height: calc(100vh - 70px); /* Điều chỉnh chiều cao để không bị che bởi header nếu có sticky header */
            position: sticky;
            top: 0; /* Gắn sidebar lên trên cùng */
            overflow-y: auto;
            flex-shrink: 0;
            box-shadow: 2px 0 5px rgba(0,0,0,.1);
        }
        .admin-sidebar .sidebar-logo {
            padding: 0 20px;
            margin-bottom: 30px;
            font-weight: bold;
            font-size: 1.25rem;
            display: flex;
            align-items: center;
        }
        .admin-sidebar .sidebar-logo img {
            height: 30px;
            margin-right: 10px;
        }
        .admin-sidebar .nav-link {
            color: rgba(255, 255, 255, 0.7);
            padding: 12px 20px;
            display: flex;
            align-items: center;
            transition: all 0.2s ease-in-out;
        }
        .admin-sidebar .nav-link:hover,
        .admin-sidebar .nav-link.active {
            background-color: rgba(0, 0, 0, 0.2);
            color: #ffffff;
            border-left: 5px solid #ffffff;
            padding-left: 15px;
        }
        .admin-sidebar .nav-link i {
            margin-right: 15px;
            font-size: 1.2rem;
        }
        .admin-sidebar .sidebar-footer {
            padding: 20px;
            text-align: center;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            margin-top: auto;
        }
        .admin-content {
            flex-grow: 1;
            padding: 1.5rem;
            overflow-y: auto;
        }
        .dashboard-card {
            background-color: #ffffff;
            border-radius: .5rem;
            padding: 1.5rem;
            box-shadow: 0 4px 6px rgba(0,0,0,.08);
            text-align: center;
            border: 1px solid #e0e0e0;
            transition: transform .2s;
        }
        .dashboard-card:hover {
            transform: translateY(-3px);
        }
        .dashboard-card h3 {
            font-size: 2.2rem;
            font-weight: 700;
            color: #198754;
        }
        .dashboard-card p {
            color: #6c757d;
            font-size: 0.95rem;
            margin-bottom: 0;
        }
        .dashboard-card .icon {
            font-size: 2.5rem;
            color: #28a745;
            margin-bottom: 0.5rem;
        }
        .chart-card {
            background-color: #ffffff;
            border-radius: .5rem;
            padding: 1.5rem;
            box-shadow: 0 4px 6px rgba(0,0,0,.08);
            border: 1px solid #e0e0e0;
        }
        .user-profile-widget {
            display: flex;
            align-items: center;
            color: #333; /* Text color for the footer widget */
        }
        .user-profile-widget img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 10px;
            border: 2px solid #ccc;
        }
        .user-profile-widget div { /* Added div around name/email */
             color: white; /* Ensure text is white */
             text-align: left;
        }
        .user-profile-widget strong {
            font-weight: 600;
            display: block; /* Make name and email stack */
        }
        .user-profile-widget small {
            font-size: 0.8em;
            opacity: 0.8;
            display: block;
        }

        /* Media queries cho responsive */
        @@media (max-width: 991.98px) {
            .admin-sidebar {
                width: 100%;
                height: auto;
                position: relative;
                padding-bottom: 0;
            }
            .admin-main-wrapper {
                flex-direction: column;
            }
            .admin-sidebar .nav-item .nav-link {
                justify-content: center;
                border-left: none;
            }
            .admin-sidebar .sidebar-logo, .admin-sidebar .sidebar-footer {
                display: none;
            }
            .admin-header {
                flex-direction: column;
                align-items: flex-start;
            }
            .admin-header .d-flex {
                width: 100%;
                justify-content: space-between;
                margin-top: 10px;
            }
            .admin-header form {
                flex-grow: 1;
                margin-right: 0 !important;
                margin-bottom: 10px;
            }
            .admin-header .form-control {
                width: auto;
            }
        }
    </style>
</head>
<body>
    <div class="admin-header">
        <h1 class="h4 text-success mb-0">@ViewData["Title"]</h1>
        <div class="d-flex align-items-center">
            <form class="d-flex me-3">
                <input class="form-control me-2" type="search" placeholder="Tìm kiếm..." aria-label="Search">
                <button class="btn btn-outline-success" type="submit"><i class="bi bi-search"></i></button>
            </form>
            <a href="#" class="btn btn-sm btn-outline-success me-2"><i class="bi bi-upload me-1"></i> Xuất báo cáo</a>
            <span class="ms-3">
                 <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS4E6th3AKPEv81tDoJmm6XQJkEfd8RDdmyow&s" alt="User Icon" class="rounded-circle" width="30" height="30">
                <span class="ms-2">@User.Identity?.Name ?? "Admin Quản lý"</span>
            </span>
            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="ms-3">
                <button type="submit" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-box-arrow-right"></i> Đăng xuất
                </button>
            </form>
        </div>
    </div>

    <div class="d-flex admin-main-wrapper">
        <aside class="admin-sidebar">
            <div class="sidebar-logo">
                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQptMtWoc-xI0S5iIs5I145CjXJDIbpfn8z9A&s" alt="EcoConnect Logo" />
                <span>EcoConnect</span>
            </div>
            <nav class="nav flex-column">
                <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Admin" ? "active" : "")"
                   asp-controller="Admin" asp-action="Dashboard"> @* <-- ĐÃ SỬA: BỎ asp-area="Admin" *@
                    <i class="bi bi-speedometer2"></i> Tổng quan
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "ManageUsers" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Admin" ? "active" : "")"
                   asp-controller="Admin" asp-action="ManageUsers"> @* <-- ĐÃ SỬA: BỎ asp-area="Admin" *@
                    <i class="bi bi-people"></i> Người dùng
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "ReviewCommunityItems" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Admin" ? "active" : "")"
                   asp-controller="CommunityItemManagement" asp-action="Review"> @* <-- ĐÃ SỬA: BỎ asp-area="Admin" *@
                    <i class="bi bi-shop"></i> Kiểm duyệt tin đăng
                </a>
                 <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "ManageCollectionSchedules" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Admin" ? "active" : "")"
                   asp-controller="RecyclingCategories" asp-action="RecyclingCenters"> @* <-- ĐÃ SỬA: BỎ asp-area="Admin" *@
                    <i class="bi bi-calendar"></i> Lịch thu gom
                </a>
                 <a class="nav-link @( (ViewContext.RouteData.Values["Action"]?.ToString() == "ManageRecyclingCategories" || ViewContext.RouteData.Values["Action"]?.ToString() == "ManageRecyclingCenters") && ViewContext.RouteData.Values["Controller"]?.ToString() == "Admin" ? "active" : "")"
                   asp-controller="Admin" asp-action="ManageRecyclingCategories"> @* <-- ĐÃ SỬA: BỎ asp-area="Admin" *@
                    <i class="bi bi-recycle"></i> Phân loại & Tái chế
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "ManageChallenges" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Admin" ? "active" : "")"
                   asp-controller="Admin" asp-action="ManageChallenges"> @* <-- ĐÃ SỬA: BỎ asp-area="Admin" *@
                    <i class="bi bi-award"></i> Thử thách xanh
                </a>
                 <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "AdjustEcoPoints" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Admin" ? "active" : "")"
                   asp-controller="Admin" asp-action="AdjustEcoPoints"> @* <-- ĐÃ SỬA: BỎ asp-area="Admin" *@
                    <i class="bi bi-coin"></i> EcoPoints
                </a>
                <a class="nav-link" href="#">
                    <i class="bi bi-file-earmark-bar-graph"></i> Báo cáo
                </a>
                <a class="nav-link" href="#">
                    <i class="bi bi-gear"></i> Cài đặt
                </a>
            </nav>
            <div class="sidebar-footer">
                <div class="user-profile-widget">
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS4E6th3AKPEv81tDoJmm6XQJkEfd8RDdmyow&s" alt="Admin Avatar" />
                    <div>
                        <strong>@User.Identity?.Name ?? "Admin"</strong>
                        <small>@User.FindFirst(ClaimTypes.Email)?.Value ?? "admin@ecoconnect.vn"</small>
                    </div>
                </div>
            </div>
        </aside>

        <main role="main" class="admin-content">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>