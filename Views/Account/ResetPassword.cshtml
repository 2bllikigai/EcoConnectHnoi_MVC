@model EcoConnect_Hanoi.Models.ForgotPassword.ResetPasswordViewModel

@{
    ViewData["Title"] = "Đặt lại mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="left">
        <h1>EcoConnect</h1>
        <h2>Chung tay vì Hà Nội xanh</h2>
        <p>Tạo mật khẩu mới để bảo vệ tài khoản của bạn và tiếp tục sử dụng EcoConnect.</p>
    </div>
    <div class="right">
        <div class="tabs">
            <a href="#" class="active">Tạo mật khẩu mới</a>
            <a asp-controller="Register" asp-action="Register">Đăng ký</a>
        </div>
        <div class="login-title">Nhập mật khẩu mới</div>
        <form asp-action="ResetPassword" method="post">
            <input type="hidden" asp-for="Email" />
            <div class="form-group">
                <input asp-for="NewPassword" type="password" class="form-control" placeholder="Mật khẩu mới" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Nhập lại mật khẩu" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="login-btn">Đặt lại mật khẩu</button>
        </form>
    </div>
</div>

@section Styles {
    <link href="@Url.Content("~/css/login.css")" rel="stylesheet" />
}