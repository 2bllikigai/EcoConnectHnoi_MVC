@model EcoConnect_Hanoi.Models.ForgotPassword.VerifyOtpViewModel

@{
    ViewData["Title"] = "Xác minh OTP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="left">
        <h1>EcoConnect</h1>
        <h2>Chung tay vì Hà Nội xanh</h2>
        <p>Xác minh mã OTP để đặt lại mật khẩu tài khoản của bạn.</p>
    </div>
    <div class="right">
        <div class="tabs">
            <a href="#" class="active">Xác minh OTP</a>
            <a asp-controller="Register" asp-action="Register">Đăng ký</a>
        </div>
        <div class="login-title">Nhập mã xác minh đã được gửi tới email</div>
        <form asp-action="VerifyOtp" method="post">
            <input type="hidden" asp-for="Email" />
            <div class="form-group">
                <input asp-for="OtpCode" class="form-control" placeholder="Nhập mã OTP" />
                <span asp-validation-for="OtpCode" class="text-danger"></span>
            </div>
            <button type="submit" class="login-btn">Xác minh</button>
        </form>
    </div>
</div>

@section Styles {
    <link href="@Url.Content("~/css/login.css")" rel="stylesheet" />
}