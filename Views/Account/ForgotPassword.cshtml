
@model EcoConnect_Hanoi.Models.ForgotPassword.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="left">
        <h1>EcoConnect</h1>
        <h2>Chung tay vì Hà Nội xanh</h2>
        <p>Khôi phục mật khẩu để tiếp tục hành trình sống xanh cùng cộng đồng!</p>
    </div>
    <div class="right">
        <div class="tabs">
            <a href="#" class="active">Quên mật khẩu</a>
            <a asp-controller="Register" asp-action="Register">Đăng ký</a>
        </div>
        <div class="login-title">Nhập email để nhận mã xác nhận</div>
        <form asp-action="ForgotPassword" method="post">
            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder="Email của bạn" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button type="submit" class="login-btn">Gửi mã OTP</button>
        </form>
    </div>
</div>

@section Styles {
    <link href="@Url.Content("~/css/login.css")" rel="stylesheet" />
}