@model EcoConnect_Hanoi.Models.UserCollectionRequest

@{
    ViewData["Title"] = "Yêu cầu Thu gom Rác";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h2 class="card-title mb-0">Gửi Yêu cầu Thu gom Rác Thải Đặc Biệt</h2>
                </div>
                <div class="card-body">
                    <p class="text-muted">Điền thông tin dưới đây để yêu cầu EcoConnect thu gom rác thải đặc biệt của bạn.</p>

                    <form asp-action="RequestPickup" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="PreferredDate" class="form-label">Ngày muốn thu gom:</label>
                            <input asp-for="PreferredDate" type="date" class="form-control" min="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                            <span asp-validation-for="PreferredDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="WasteDescription" class="form-label">Mô tả rác thải (loại, số lượng ước tính):</label>
                            <textarea asp-for="WasteDescription" class="form-control" rows="5" placeholder="Ví dụ: 1 tủ lạnh cũ, 20kg giấy báo, 5 chai nhựa lớn..." required></textarea>
                            <span asp-validation-for="WasteDescription" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-success mt-3">Gửi Yêu cầu</button>
                        <a asp-action="Index" class="btn btn-secondary mt-3 ms-2">Hủy</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}